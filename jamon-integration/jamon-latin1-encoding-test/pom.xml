<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
      <artifactId>jamon-integration</artifactId>
      <groupId>org.jamon</groupId>
      <version>trunk-SNAPSHOT</version>
    </parent>
    <groupId>org.jamon</groupId>
    <artifactId>jamon-latin1-encoding-test</artifactId>
    <version>trunk-SNAPSHOT</version>
    <name>Jamon Latin1 Encoding Test</name>
    <description>Test of processing and compiling templates using latin1 encoding.</description>
    <!-- This needs to be a separate project so that we can
         specify a different encoding to the compiler -->
    <properties>
      <project.build.sourceEncoding>latin1</project.build.sourceEncoding>
    </properties>
    <dependencies>
        <dependency>
            <groupId>org.jamon</groupId>
            <artifactId>jamon-runtime</artifactId>
            <version>trunk-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>org.jamon</groupId>
            <artifactId>jamon-processor</artifactId>
            <version>trunk-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>org.jamon</groupId>
            <artifactId>jamon-api</artifactId>
            <version>trunk-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.3.1</version>
            <scope>test</scope>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>org.jamon</groupId>
                <artifactId>jamon-maven-plugin</artifactId>
                <version>trunk-SNAPSHOT</version>
                <executions>
                    <execution>
                        <id>jamon-generate-test-sources</id>
                        <phase>generate-test-sources</phase>
                        <goals>
                            <goal>translate-tests</goal>
                        </goals>
                        <configuration>
                          <templateSourceDir>src/test/java</templateSourceDir>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.8.1</version>
                <configuration>
                    <includes>
                        <include>**/*Test.java</include>
                    </includes>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
